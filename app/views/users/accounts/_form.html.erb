<%= simple_form_for(@users_account, wrapper: :form) do |f| %>
  <div uk-grid>
    <div class="uk-width-auto">
      <%= yield :title %>
    </div>
    <div class="uk-width-expand">
      <div class="uk-float-right">
        <%= yield :links %>
        <%= f.button :submit, class: 'uk-button uk-button-primary' %>
      </div>
    </div>
  </div>

  <%= f.error_notification %>

  <div>
    <%= f.input :email %>
    <%= f.input :password, autocomplete: "off" %>
    <%= f.input :password_confirmation %>

    <div>
      <%= f.label :roles %>
      <div class="uk-form-controls">
        <div class="uk-grid">
          <%= f.collection_check_boxes :role_ids, Role.all, :id, :to_label, :item_wrapper_class => 'uk-width-1-6' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
