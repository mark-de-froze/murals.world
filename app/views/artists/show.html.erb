<% content_for :links_menu do %>
  <li class="uk-nav-divider"></li>
  <li><%= link_to t(:edit_artist), edit_artist_path(@artist) %></li>
<% end %>

<% content_for :links_back do %>
    <li><a href="<%= artists_path%>" title="<%=t(:back)%>" uk-icon="icon: chevron-left"></a></li>
<% end %>


<div class="uk-container  uk-container-expand uk-margin-top">

  <article class="uk-article">
    <h1 class="uk-article-title"><%= @artist.name %>
      <% if @artist.city %>
        <span class="uk-badge"><%= @artist.city.to_label %></span>
      <% end %>
    </h1>
    <p class="uk-article-meta"><%= link_to @artist.link_host, @artist.link if @artist.link %></p>
    <p class="uk-text-lead"><%= @artist.bio %></p>
  </article>

  <%= render 'murals/murals' %>
</div>