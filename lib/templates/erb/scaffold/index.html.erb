<div class="uk-container uk-margin-top">
  <div uk-grid>
    <div class="uk-width-auto">
      <legend class="uk-legend"><%= plural_table_name.titleize %></legend>
    </div>
    <div class="uk-width-expand">
      <div class="uk-float-right">
        <%%= link_to t(:new), new_<%= singular_table_name %>_path, class: 'uk-button uk-button-primary' %>
      </div>
    </div>
  </div>

  <table class="uk-table">
    <thead>
      <tr>
  <% attributes.reject(&:password_digest?).each do |attribute| -%>
        <th><%%=t(:<%= attribute.name %>)%></th>
  <% end -%>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
  <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
  <% end -%>
          <td><%%= link_to t(:show), <%= singular_table_name %> %></td>
          <td><%%= link_to t(:edit), edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
          <td>
            <%%= link_to t(:destroy), <%= singular_table_name %>, method: :delete, data: { confirm: t(:confirm) } %>
          </td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div>