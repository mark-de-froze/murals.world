<%% content_for :title do %>
<legend class="uk-legend"><%%= t(:editing) %> <%%= t(:<%= singular_table_name %>) %></legend>
<%% end %>

<%% content_for :links do %>
<%%= link_to t(:back), <%= index_helper %>_path, class: 'uk-button uk-button-default' %>
<%%= link_to t(:show), @<%= singular_table_name %>, class: 'uk-button uk-button-default' %>
<%%= link_to t(:destroy), @<%= singular_table_name %>, method: :delete, class: 'uk-button uk-button-danger', data: { confirm: t(:confirm) } %>
<%% end %>

<div class="uk-container uk-margin-top">
  <%%= render 'form', <%= singular_table_name %>: @<%= singular_table_name %> %>
</div>